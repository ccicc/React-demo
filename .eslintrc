{
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },

    "parser": "babel-eslint",

    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },

    "plugins": [
        "react"
    ],

    "rules": {
        // stylistic issues
        "indent": [1, 4, {
            "SwitchCase": 1,
            "flatTernaryExpressions": true
        }],
        "semi": [1, "always"],
        "array-bracket-spacing": [1, "always"],
        "comma-spacing": 1,
        "comma-style": [1, "last"],
        "comma-dangle": [1, "never"],
        "object-curly-spacing": [1, "always"],
        "spaced-comment": [1, "always"],
        "space-before-function-paren": [1, "never"],
        "space-before-blocks": [1, "always"],
        "key-spacing": 1,
        "func-call-spacing": [1, "never"],
        "generator-star-spacing": [1, {
            "after": true,
            "before": false
        }]
    }

}
